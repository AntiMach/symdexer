{
  "name": "symdexer",
  "displayName": "Symdexer (Python)",
  "description": "A python symbol indexer",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.77.0"
  },
  "categories": [
    "Other"
  ],
  "repository": {
    "url": "https://github.com/antimach/symdexer"
  },
  "publisher": "AntiMach",
  "activationEvents": [],
  "main": "./out/extension.js",
  "icon": "./icon128.png",
  "contributes": {
    "commands": [
      {
        "command": "symdexer.reset",
        "title": "Symdexer: Reset cache"
      },
      {
        "command": "symdexer.index",
        "title": "Symdexer: Cache index"
      },
      {
        "command": "symdexer.find",
        "title": "Symdexer: Find symbol"
      },
      {
        "command": "symdexer.locate",
        "title": "Symdexer: Locate symbol"
      }
    ],
    "configuration": [
      {
        "title": "Symdexer",
        "properties": {
          "symdexer.cacheFile": {
            "type": "string",
            "default": "symdex.db",
            "description": "Location of database file to use"
          },
          "symdexer.packages": {
            "type": "array",
            "default": [],
            "description": "Package names to index"
          },
          "symdexer.types": {
            "type": "array",
            "default": [
              "defines",
              "assigns",
              "imports"
            ],
            "description": "Symbol types to look for on editor"
          },
          "symdexer.fuzzy": {
            "type": "boolean",
            "default": false,
            "description": "When finding a symbol, should the text be used as a pattern instead?"
          },
          "symdexer.useVenv": {
            "type": "boolean",
            "default": true,
            "description": "Use the current workspace's venv configuration when possible"
          },
          "symdexer.venvDir": {
            "type": "string",
            "default": ".venv",
            "description": "Specify a different venv directory"
          }
        }
      }
    ],
    "keybindings": {
      "command": "symdexer.find",
      "key": "alt+oem_period",
      "when": "editorTextFocus && editorLangId == 'python'"
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.77.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.56.0",
    "@typescript-eslint/parser": "^5.56.0",
    "eslint": "^8.36.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^4.9.5",
    "@vscode/test-electron": "^2.3.0"
  }
}